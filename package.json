{
  "name": "Orion",
  "version": "1.0.0",
  "description": "A visual framework",
  "main": "server.js",
  "watch": {
    "compile:sass": {
      "patterns": [
        "App"
      ],
      "extensions": "scss",
      "quiet": false
    },
    "dev_server": {
      "patterns": [
        "server.js"
      ],
      "extensions": "scss",
      "quiet": false
    }
  },
  "scripts": {
    "start": "npm run watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "bundle:deps": "jspm bundle orion/app + babel + babel-preset-es2015 - [orion/**/*]  dist/dev/dependency-bundle.js --skip-source-maps --inject",
    "bundle:app": "jspm bundle orion/app",
    "unbundle": "jspm unbundle",
    "compile:sass": "sassc -m App/demo.scss App/demo.css; sassc -m App/main.scss App/main.css;",
    "dev_server": "NODE_ENV=development; node server.js --bsOpen",
    "prod_server": "NODE_ENV=production; node server.js --bsOpen=external",
    "watch": "npm-watch"
  },
  "author": "9Cloud",
  "license": "UNLICENSED",
  "private": true,
  "babel": {
    "env": {
      "production": {
        "plugins": [
          "transform-react-constant-elements",
          "transform-react-inline-elements"
        ]
      }
    }
  },
  "jspm": {
    "dependencies": {
      "babel-polyfill": "npm:babel-polyfill@^6.9.1",
      "bluebird": "npm:bluebird@^3.4.1",
      "capaj/systemjs-hot-reloader": "github:capaj/systemjs-hot-reloader@^0.5.5",
      "classnames": "npm:classnames@^2.2.5",
      "es6-enum": "npm:es6-enum@^1.0.0",
      "lodash": "npm:lodash@^4.5.0",
      "markdown-it": "npm:markdown-it@^7.0.0",
      "mobx": "npm:mobx@^2.3.7",
      "mobx-react": "npm:mobx-react@^3.5.1",
      "mobx-react-devtools": "npm:mobx-react-devtools@^4.2.4",
      "moment": "npm:moment@^2.14.1",
      "phoenix-socket": "npm:phoenix-socket@^1.1.3",
      "prosemirror": "npm:prosemirror@^0.9.1",
      "react": "npm:react@^0.14.8",
      "react-dom": "npm:react-dom@^0.14.8",
      "react-router": "npm:react-router@^2.6.1",
      "react-tap-event-plugin": "npm:react-tap-event-plugin@^0.2.2",
      "remarkable": "npm:remarkable@^1.6.2",
      "whatwg-fetch": "npm:whatwg-fetch@^0.11.0"
    },
    "devDependencies": {
      "babel": "npm:babel-core@^5.8.24",
      "babel-preset-es2015": "npm:babel-preset-es2015@^6.3.13",
      "babel-preset-react": "npm:babel-preset-react@^6.3.13",
      "babel-runtime": "npm:babel-runtime@^5.8.24",
      "core-js": "npm:core-js@^1.1.4"
    }
  },
  "devDependencies": {
    "browser-sync": "^2.11.1",
    "chokidar-socket-emitter": "^0.5.2",
    "compression": "^1.6.2",
    "express": "^4.14.0",
    "jspm": "^0.16.39",
    "jspm-server": "^1.0.1",
    "npm-watch": "^0.1.5",
    "optimist": "^0.6.1"
  },
  "dependencies": {
    "jspm": "^0.16.30"
  }
}
