{
  "name": "orion",
  "version": "1.0.0-dev",
  "registry": "github",
  "description": "A visual framework for creating engaging and delightful web applications.",
  "keywords": [
    "html",
    "css",
    "css framework",
    "vsiual toolkit"
  ],
  "author": "Kay Sackey",
  "contributors": [
    "Kekeli Sackey"
  ],
  "license": "UNLICENSED",
  "private": true,
  "main": "src/index.js",
  "homepage": "https://github.com/9Cloud/Ceres",
  "repository": {
    "type": "git",
    "url": "https://github.com/9Cloud/Ceres.git"
  },
  "babel": {
    "presets": [
      "es2015-loose",
      "react",
      "stage-0"
    ],
    "env": {
      "production": {
        "plugins": [
          "transform-react-constant-elements",
          "transform-react-inline-elements",
          "transform-decorators-legacy",
          "transform-runtime"
        ]
      }
    }
  },
  "directories": {
    "lib": "orion",
    "examples": "html_prototypes"
  },
  "devDependencies": {
    "babel-core": "^6.14.0",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.5",
    "babel-plugin-istanbul": "^2.0.1",
    "babel-plugin-react-transform": "^2.0.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-flow-strip-types": "^6.14.0",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-es2015-loose": "^7.0.0",
    "babel-preset-es2015-native-modules": "^6.9.4",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.14.0",
    "browser-sync": "^2.15.0",
    "compression": "^1.6.2",
    "express": "^4.14.0",
    "extract-text-webpack-plugin": "^2.0.0-beta.4",
    "file-loader": "^0.9.0",
    "happypack": "^3.0.2",
    "html-webpack-plugin": "^2.22.0",
    "http-proxy": "^1.14.0",
    "json-loader": "^0.5.4",
    "mobx-react-devtools": "^4.2.4",
    "mobx-remotedev": "^0.1.3",
    "npm-watch": "^0.1.6",
    "optimist": "^0.6.1",
    "progress-bar-webpack-plugin": "^1.9.0",
    "redbox-react": "^1.3.0",
    "validator": "^5.5.0",
    "webpack": "^2.1.0-beta.26",
    "webpack-dev-server": "^2.1.0-beta.12",
    "webpack-uglify-js-plugin": "^1.1.9"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "markdown-it": "^7.0.0",
    "mobx": "^2.4.3",
    "mobx-react": "^3.5.5",
    "prosemirror": "^0.9.1",
    "tide": "git://github.com/KaySackey/tide.git#dev"
  },
  "watch": {
    "compile:sass": {
      "patterns": [
        "scss"
      ],
      "extensions": "scss",
      "quiet": false
    },
    "dev_server": {
      "patterns": [
        "webpack.config.js"
      ],
      "extensions": "js",
      "quiet": false
    },
    "proxy_server": {
      "patterns": [
        "server.js"
      ],
      "quiet": false
    },
    "browser_sync:dev": {
      "patterns": [
        "server_bs.js"
      ],
      "quiet": false
    }
  },
  "scripts": {
    "start": "npm run watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run compile:js && npm run compile:sass",
    "compile:js": "webpack --config ./webpack.config.js --hide-modules --optimize-minimize --define process.env.NODE_ENV='production'",
    "compile:sass": "sassc -m scss/demo.scss scss/demo.css; sassc -m scss/main.scss scss/main.css;",
    "proxy_server": "NODE_ENV=development; babel-node server.js",
    "browser_sync:dev": "sleep 1; NODE_ENV=production; babel-node server_bs.js",
    "browser_sync:open": "NODE_ENV=production; babel-node server_bs.js --bsOpen=external",
    "watch": "npm-watch",
    "dev_server": "NODE_ENV=development; webpack-dev-server",
    "webpack": "webpack --hide-modules"
  }
}
